# -*- mode: conf -*-

config defaultToCurrentScreen true
config checkDefaultsOnLoad true

# Layout aliases
alias MacBookAir 1440x900

# General aliases
alias sox screenOriginX
alias soy screenOriginY
alias ssx screenSizeX
alias ssy screenSizeY

# show Emacs in the centre, 100 columns wide in current font
alias emacsSmall move (${ssx}-821)/2;0 821;871 ${MacBookAir}
# show Mail right in the centre
alias mailSmall move (${ssx}-1150)/2;${soy}+(${ssy}-740)/2 1150;740 ${MacBookAir}

alias emacsDev move ${sox};${soy} ${ssx};${ssy} ${MacBookAir}

default home resolutions:${MacBookAir}

# Default for home laptop
layout home 'Emacs' ${emacsSmall}
layout home 'Mail' ${mailSmall}

layout dev 'Emacs' ${emacsDev}

bind h:ctrl;alt;cmd sequence layout home > focus 'Google Chrome'
bind d:ctrl;alt;cmd sequence layout dev > focus 'Emacs'

bind r:ctrl;alt;cmd relaunch