# -*- mode: conf-unix -*-
[color]
        ui = true
[user]
        name = Bradley Wright
[alias]
        co = checkout
        st = status -sb
        l = log --decorate --name-status
        graph = log --graph --format='%Cred%h%Creset %s <%Cgreen%ae>'
        lines = diff --stat
[branch]
        autosetuprebase = always
[push]
        default = tracking
[core]
        excludesfile = /opt/boxen/config/git/gitignore
# local overrides - git 1.7.10 or higher
# http://stackoverflow.com/a/9733277
[include]
    path = ~/.localgitconfig

[hub]
protocol = https

[credential]
helper = /opt/boxen/bin/boxen-git-credential
